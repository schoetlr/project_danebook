    <main>
      <header class = "container" id="cover">

        <!--cover images-->
        <div class = "row">
          <img class = "cover-photo hidden-sm hidden-xs" width= "100%" height = "350px" src ="assets/hogwarts_small.jpg">
          <div class="col-md-12 hidden-xs hidden-sm profile-image">
            <img src="assets/harry_potter_small.jpg" height="200px" width="180px">
          </div>
        </div>

        <!--secondary navbar-->
        <div id = "profile-nav" class = "row">
          <div class = "col-md-7 col-md-offset-3">
            <ul class = "nav nav-tabs " role = "profile-nav">
              <li><a href = "timeline.html">Timeline</a></li>
              <li class = "active"><%= link_to "About", user_path(@user) %></li>
