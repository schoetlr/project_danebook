<p><%= flash[:error] if flash[:error] %></p>

<h1>Sign In</h1>

<%= form_tag session_path do %>

  <%= label_tag do %>
    Email
    <%= text_field_tag :email %>
  <% end %>

  <%= label_tag do %>
    Password
    <%= password_field_tag :password %>
  <% end %>

  <%= label_tag do %>
    Remember me?
    <%= check_box_tag :remember_me, true %>
  <% end %>

  <%= submit_tag %>

<% end %>
