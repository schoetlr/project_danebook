<div class="row">

  <div class="col-md-8 photo-show-section">
    <div class="row">
      <div class="col-md-12">
        <%= image_tag @photo.image.url, width: "600px" %>
      </div>
    </div>
    <% if @photo.user.id == current_user.id %>
      <div class="row">
        <div class="col-md-2 pull-right">
          <%= link_to "Set as Profile", user_set_profile_photo_path(current_user.id, photo_id: @photo.id), method: :post  %>
          <%= link_to "Set as Cover", user_set_cover_photo_path(current_user.id, photo_id: @photo.id), method: :post %>
          <%= link_to "Delete Photo", photo_path(@photo.id), method: :delete %>
        </div>
      </div>
    <% end %>

  </div>


  <div class="col-md-4 photo-show-section">
    <div id="user-info">


    </div>

    <div id="comment-form">
      <%= form_tag photo_comments_path(@photo) do %>
        <%= text_area_tag "comment[content]", nil, placeholder: "Write a comment" %>
        <%= submit_tag "create comment" %>
      <% end %>
    </div>

    <div id="photo-comments">
      <% @photo.comments.each do |comment| %>
        <div class="photo-comment">
          <div class="photo-comment-owner row">
            <div class="col-xs-3">
              <!-- profile photo here -->
            </div>

            <div class="col-xs-9">
              <%= link_to comment.user.name, user_path(comment.user) %>
              <p>Said on <%= comment.created_at.strftime("%B %d, %Y") %></p>
            </div>
          </div><!-- end comment owner -->

          <div class="row">
            <p><%= comment.content %></p>
          </div>

          <div class="row photo-comment-like-info">

          </div>

        </div>
      <% end %>
    </div>


  </div>

</div>
